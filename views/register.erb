<div class="container">
      <div class="row">

        <div class="col-xs-12">
          <img id="logo" src="http://placehold.it/150x150">
          <h1 class="text-center">Register</h1>
          <!-- if there is a message -->
          <% if @message %>
              <!-- print that message -->
              <p class="text-center" id="warning-message"><strong><%= @message %></strong></p>
          <% end %>
        </div>

        <div class="col-xs-12">
          <form class="" action="/users/register" method="post">
            <input class="form-control" type="text" name="user_name" placeholder="Username">
            <input class="form-control" type="text" name="user_email" placeholder="Email">
            <input class="form-control" type="password" name="password" placeholder="Password">
            <!-- <input class="form-control" type="password" name="password-confirm" placeholder="Confirm Password"> -->
            <!-- <input class="form-control" type="text" name="first_name" placeholder="First Name">
            <input class="form-control" type="text" name="last_name" placeholder="Last Name"> -->
            <input class="form-control" id="btn_register" type="submit" value="Register">
          </form>
        </div>

      </div>
    </div>
